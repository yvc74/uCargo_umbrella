<main>
     <nav>
      <ul class="navContent">
         <li class="navContentItem active">
            <a onclick="navigate('/plannings');">
               <img src="https://private.cargobot.io/bundles/app/img/left-menu/negotiation-yellow.png" alt="">
               <p>COTIZACIONES</p>
            </a>
         </li>
         <li class="navContentItem">
            <a onclick="navigate('/assignments/plannings');">
               <img src="https://private.cargobot.io/bundles/app/img/left-menu/negotiation-yellow.png" alt="">
               <p>ASIGNACIONES</p>
            </a>
         </li>
         <li class="navContentItem">
            <a href="">
               <img src="https://private.cargobot.io/bundles/app/img/left-menu/negotiation-yellow.png" alt="">
               <p>SEGUIMIENTO</p>
            </a>
         </li>
         <li class="navContentItem">
            <a onclick="navigate('/records');">
               <img src="https://private.cargobot.io/bundles/app/img/left-menu/negotiation-yellow.png" alt="">
               <p>HISTORIAL</p>
            </a>
         </li>
         <li class="navContentItem">
            <a  onclick="navigate('/invoices');">
               <img src="https://private.cargobot.io/bundles/app/img/left-menu/negotiation-yellow.png" alt="">
               <p>FACTURAS</p>
            </a>
         </li>
         <li class="navContentItem">
            <a onclick="navigate('/favouritedrivers');">
               <img src="https://private.cargobot.io/bundles/app/img/left-menu/negotiation-yellow.png" alt="">
               <p>FAVORITOS</p>
            </a>
         </li>
      </ul>
   </nav>
   <section class="container" id="planning">
      <h1 class="panelHeading">
         HISTORIAL
      </h1>
      <div class="tableContainer">
         <table class="table">
            <thead class="tableHead">
               <tr>
                  <th>REF U.CARGO</th>
                  <th>STATUS</th>
                  <th>ORIGEN</th>
                  <th>DESTINO</th>
                  <th>REF. TRASNPORTISTA</th>
                  <th>IMP/EXP</th>
                  <th>MERCANCIA</th>
               </tr>
            </thead>
            <tbody class="tableBody">
              <%= for planning <- @plannings do %>
                  <tr onclick="navigate('/plannings/<%= planning.order.planning_id %>/proposals');">
                      <td><%= planning.order.planning_id %></td>
                      <td><%= render_difference_date(planning.auction.begin_date, planning.auction.end_date) %> horas</td>
                      <td><%= planning.order.custom.name %></td>
                      <td><%= planning.order.delivery.name %></td>
                      <td></td>
                      <td><%= render_order_type(planning.order.type) %></td>
                      <td><%= planning.order.merchandise_type %></td>
                  </tr>
              <% end %>
            </tbody>
         </table>
      </div>
   </section>
</main>
<div class="remodal quotation-new" data-remodal-id="new" data-remodal-options="hashTracking: false">
  <div class="quotation-new__details">
    <p class="quotation-new__title">
      TU CARGAMENTO </br> NUEVO ES:
    </p>
    <div class="quotation-new__actions">
      <a href="/plannings/import/new" class="btn">
        IMPORTACIÓN
      </a>
      <a href="/plannings/export/new" class="btn">
        EXPORTACIÓN
      </a>
      <a data-remodal-action="cancel" class="new-actions__cancel">
        Cancelar
      </a>
    </div>
  </div>
</div>
<script type="text/javascript">
  function navigate(url)
  {
    document.location.href = url;
  }
</script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/remodal/1.1.1/remodal.min.js"></script>
